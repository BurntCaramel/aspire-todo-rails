<table class="mui-table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Completed</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= completed_at_ago item %></td>
        <td><%= link_to 'Edit', todo_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>