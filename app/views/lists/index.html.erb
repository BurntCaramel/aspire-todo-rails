<h1>Lists</h1>

<table class="mui-table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Items</th>
      <th>Actions</th>
    </tr>
  </thead>
<% @lists.each do |list| %>
  <tbody>
    <tr>
      <td><h2><%= link_to list.title, list %></h2></td>
      <td><%= link_to list.todo_items.count, list_todo_items_path(list) %></td>
      <td><%= link_to 'Edit', edit_list_path(list) %></td>
    </tr>
  </tbody>
<% end %>
</table>

<%= link_to 'New List', new_list_path %>
